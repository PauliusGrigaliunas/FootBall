@model IEnumerable<WebApplication.Game>

@{
    ViewBag.Title = "Details";
}
<!DOCTYPE html>
<head runat="server">

    <title>Time Entry</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="bootstrap.min.css" />

    <script src="bootstrap.min.js"></script>

    <link rel="stylesheet" href="bootstrap-theme.min.css" />
    <style>
        body {
            margin-top: 50px; /* 50px is the height of the navbar - change this if the navbarn height changes */
            text-align: left;
        }


        .jumbotron {
            background-color: rgba(169, 167, 167, 0.70);
        }
    </style>
</head>
<html>

<body>
    <div class="jumbotron">

        <h1 style="text-align:center">Now</h1>

        <h2 style="text-align:center"> @Model.FirstOrDefault().Team.Name VS @Model.FirstOrDefault().Team1.Name</h2>
  
        <h2 style="text-align:center">@Model.FirstOrDefault().FirstTeamScore : @Model.FirstOrDefault().SecondTeamScore</h2>
        <h2 style="text-align:left"> Recently</h2>
        <div class="table-responsive">
            <table class=table table-striped>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Team.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstTeamScore)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Team1.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SecondTeamScore)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                </tr>

                @foreach (var item in Model.Skip(1))
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Team.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstTeamScore)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Team1.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SecondTeamScore)
                        </td>
                        <th>
                            @Html.DisplayFor(modelItem => item.Date) 
                        </th>

                    </tr>
                }

            </table>
        
        </div>
    </div>

</body>
</html>
