@model IEnumerable<WebApplication.GameTable>

@{
    ViewBag.Title = "Index";
}


<style>
    body {
        margin-top: 50px; /* 50px is the height of the navbar - change this if the navbarn height changes */
        text-align: left;
    }


    .jumbotron {
        background-color: rgba(169, 167, 167, 0.70);
    }
</style>
<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeamsTable.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstTeamScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamsTable1.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondTeamScore)
            </th>          
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamsTable.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstTeamScore)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeamsTable1.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondTeamScore)
                </td>
               
                <td>
            </tr>
        }

    </table>
    <a href="http://localhost:60096/TeamsTables/Index" class="btn btn-primary btn-lg"> &larr;</a>
</div>
