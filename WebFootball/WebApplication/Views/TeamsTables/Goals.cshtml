@model IEnumerable<WebApplication.TeamsTable>

@{
    ViewBag.Title = "BestGames";
}

<style>
    body {
        margin-top: 50px; /* 50px is the height of the navbar - change this if the navbarn height changes */
        text-align: left;
        color: azure;
    }


    .jumbotron {
        background-color: rgba(169, 167, 167, 0.70);
    }
</style>

<div class="jumbotron">


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Goals
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Victories)
                </td>
            </tr>
        }

    </table>
    <p style="color:antiquewhite">

        <a href="http://localhost:60096/TeamsTables/Index" class="btn btn-primary btn-lg"> &larr;</a>
    </p>
</div>
